<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns="http://agavi.org/agavi/config/parts/module/1.0" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">
	
	<ae:configuration>
		
		<module enabled="true">
			<settings>
				<setting name="title">EventDB Module</setting>
				<setting name="version">1.0</setting>
                <!-- Whether to show copy and paste actions in the GUI. Only 
                    works in IE the way you'd expect, so it's disabled per default -->
                <setting name="showCopyPaste">false</setting>
		
                <!--
                    Internal settings, do not modify
                -->
                <setting name="agavi.include.javascript">
                    <ae:parameter>%core.module_dir%/EventDB/config/javascript.xml</ae:parameter>
                </setting>
                 <setting name="agavi.include.databases">
                    <ae:parameter>%core.module_dir%/EventDB/config/databases.xml</ae:parameter>
                </setting>
                <setting name="agavi.include.css">
                    <ae:parameter>%core.module_dir%/EventDB/config/css.xml</ae:parameter>
                </setting>
                <setting name="agavi.include.cronks">
                    <ae:parameter>%core.module_dir%/EventDB/config/cronks.xml</ae:parameter>
                </setting>
                <setting name="agavi.include.routing">
                    <ae:parameter>%core.module_dir%/EventDB/config/routing.xml</ae:parameter>
                </setting>
                <setting name="agavi.include.routing">
                    <ae:parameter>%core.module_dir%/EventDB/config/routing.xml</ae:parameter>
                </setting>

                <setting name="use_edbc">true</setting>

                <setting name="agavi.include.templateExtensions">
                    <ae:parameter>%core.module_dir%/EventDB/config/templateExtensions/EventDBServiceExtension.xml</ae:parameter>
                    <ae:parameter>%core.module_dir%/EventDB/config/templateExtensions/EventDBHostExtension.xml</ae:parameter>
                  </setting>
			</settings>
		</module>
		
	</ae:configuration>
	
</ae:configurations>