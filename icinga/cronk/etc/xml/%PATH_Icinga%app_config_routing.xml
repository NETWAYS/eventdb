<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0" xmlns="http://agavi.org/agavi/config/parts/routing/1.0">
	<ae:configuration context="web">
		<routes>
			<route pattern="^/cronks" name="cronks" output_type="simple" module="Cronks">
			
				<route name=".eventdb" pattern="^/eventdb" action="EventDB">
				    <route name=".events" pattern="^/events" action=".Events">
				        <route name=".comments" pattern="^/comments" action=".Comments">
				            <route name=".add" pattern="^$" action=".Add" output_type="json" />    
				        </route>
				        <route name=".list" pattern="^$" action=".List" output_type="json" />
				        <route name=".event" pattern="^/event" action=".Event">
				            <route name=".comments" pattern="^/comments" action=".Comments">
				                <route name=".list" pattern="^$" action=".List" output_type="json" />
				            </route>
				        </route>
				    </route>
				</route>

			</route>
		</routes>
	</ae:configuration>
</ae:configurations>
